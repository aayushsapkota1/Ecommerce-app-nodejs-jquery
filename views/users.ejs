            sessionStorage.clear();
            window.location.replace('/');
        });
        var table = $("#users").DataTable({
                ajax:{
                    url:"/api/users",
                    dataSrc:""
                },
                columns:[
                    {
                        data:"name",
                        render:function(data,type,user){
                            return "<p>"+user.name+"</p>";
                        }
                    },
                    {
                         data: "email",
                         render:function(data,type,user){
                            return "<p>"+user.email+"</p>";
                        }


                     },
                     {
                         data: "isAdmin",
                         render:function(data,type,user){
